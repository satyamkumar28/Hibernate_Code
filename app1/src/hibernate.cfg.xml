<?xml version="1.0" encoding="UTF-8"?>

<hibernate-configuration>
	
	<session-factory>
		
		
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.connecton.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">system</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/HibernateTutorial</property>
		<property name="hibernate.hbm2ddl.auto">create</property>
		
		<mapping resource="com/lara/Person.hbm.xml"></mapping>
	</session-factory>
</hibernate-configuration>